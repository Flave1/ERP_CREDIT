@model Finance.Contracts.Response.Reports.ReportRespObj
@{ var loanList = Model.IndividualCustomers.ToList(); }

<div class="container">
    <div class="row col-md-12">
        <h2>INDIVIDUAL LOAN CUSTOMER</h2>
    </div>
    <div class="row col-md-12">
        <div><h5>FROM : <i>@(loanList.FirstOrDefault().From.Date.ToString("dd MMMM yyyy"))</i>&nbsp;&nbsp; TO : <i>@(loanList.FirstOrDefault().To.Date.ToString("dd MMMM yyyy"))</i></h5></div>
    </div>
    <div style="margin-top:10px;">
        <h5>
            TOTAL : @Html.DisplayFor(model => model.IndividualCustomers.FirstOrDefault().Total)
        </h5>
    </div>
    <div style="margin-top:10px;">
        <h5>
            SUM :  @(loanList.FirstOrDefault().Sum)
        </h5>
    </div>


    <div style="margin-top:30px; font-size:14px;" class="row">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>S/N</th>
                    <th>Customer Name</th>
                    <th>Date of Birth</th>
                    <th>Gender</th>
                    <th>Marital Status</th>
                    <th>Phone Number</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Next of Kin</th>
                    <th>Employment Status</th>
                    <th>Employer</th>
                    <th>Current Exposure</th>
                    <th>Exposure Limit</th>
                    <th>Relationship Manager</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.IndividualCustomers)
                {
                <tr>
                    <td>@(item.SN)</td>
                    <td>@(item.CustomerName)</td>
                    <td>@(item.DateOfBirth.Value.Date.ToString("MM/dd/yyyy"))</td>
                    <td>@(item.Gender)</td>
                    <td>@(item.MaritalStatus)</td>
                    <td>@(item.PhoneNo)</td>
                    <td>@(item.Email)</td>
                    <td>@(item.Address)</td>
                    <td>@(item.NextOfKin)</td>
                    <td>@(item.EmploymentStatus)</td>
                    <td>@(item.Employer)</td>
                    <td>@(item.CurrentExposure)</td>
                    <td>@(item.ExposureLimit)</td>
                    <td>@(item.RelationshipManager)</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
