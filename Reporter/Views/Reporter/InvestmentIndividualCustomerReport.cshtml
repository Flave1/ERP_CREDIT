@model Finance.Contracts.Response.Reports.ReportRespObj
@{ var loanList = Model.IndividualInvestorCustomers.ToList(); }

<div class="container">
    <div class="row col-md-12">
        <h2>INDIVIDUAL INVESTMENT CUSTOMERs</h2>
    </div>
    <div class="row col-md-12">
        <div><h5>FROM : <i>@(loanList.FirstOrDefault().From.Date.ToString("dd MMMM yyyy"))</i>&nbsp;&nbsp; TO : <i>@(loanList.FirstOrDefault().To.Date.ToString("dd MMMM yyyy"))</i></h5></div>
    </div>
    <div style="margin-top:10px;">
        <h5>
            TOTAL : @Html.DisplayFor(model => model.IndividualInvestorCustomers.FirstOrDefault().Total)
        </h5>
    </div>
    <div style="margin-top:10px;">
        <h5>
            SUM : @Html.DisplayFor(model => model.IndividualInvestorCustomers.FirstOrDefault().Sum)
        </h5>
    </div>


    <div style="margin-top:30px; font-size:14px;" class="row">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>S/N</th>
                    <th>Customer Name</th>
                    <th>Date of Birth</th>
                    <th>Gender</th>
                    <th>Marital Status</th>
                    <th>Phone Number</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Next of Kin</th>
                    <th>Current Balance</th>
                    <th>Relationship Manager</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.IndividualInvestorCustomers)
                {
                <tr>
                    <td>@(item.SN)</td>
                    <td>@(item.CustomerName)</td>
                    <td>@(item.DateofBirth.Value.Date.ToString("MM/dd/yyyy"))</td>
                    <td>@(item.Gender)</td>
                    <td>@(item.MaritalStatus)</td>
                    <td>@(item.PhoneNumber)</td>
                    <td>@(item.EmailAddress)</td>
                    <td>@(item.CustomerAddress)</td>
                    <td>@(item.NextOfKin)</td>
                    <td>@(item.CurrentBalance)</td>
                    <td>@(item.AccountOfficer)</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
